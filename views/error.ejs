<section class="text-center py-5">
  <h1 class="display-6 fw-semibold mb-3"><%= title %></h1>
  <p class="text-muted mb-4"><%= message %></p>
  <% if (error && Object.keys(error).length) { %>
    <pre class="bg-light p-3 rounded text-start small overflow-auto"><%= error.stack %></pre>
  <% } %>
  <a class="btn btn-outline-primary mt-4" href="/">
    <i class="fa-solid fa-house me-2"></i>
    Return Home
  </a>
</section>

