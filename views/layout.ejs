<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title ? title + ' | ' : '' %>Alex Unnippillil</title>
    <!-- Resources used: Bootstrap 5.3 via jsDelivr CDN: https://getbootstrap.com -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    >
    <!-- Resources used: Font Awesome 6 via CDNJS: https://cdnjs.com/libraries/font-awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    >
    <link rel="stylesheet" href="/stylesheets/site.css">
  </head>
  <body class="d-flex flex-column min-vh-100">
    <header class="bg-dark">
      <nav class="navbar navbar-expand-md navbar-dark container py-3">
        <a class="navbar-brand fw-semibold" href="/">Alex Unnippillil</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#siteNav"
          aria-controls="siteNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="siteNav">
          <ul class="navbar-nav ms-auto">
            <% (navItems || []).forEach(function(item) { %>
              <li class="nav-item">
                <a
                  class="nav-link <%= currentPath === item.href ? 'active' : '' %>"
                  href="<%= item.href %>"
                >
                  <%= item.label %>
                </a>
              </li>
            <% }); %>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-fill py-5">
      <div class="container">
        <%- body %>
      </div>
    </main>

    <footer class="bg-light py-4 mt-auto">
      <div class="container text-center small">
        <div class="mb-2">&copy; <%= currentYear %> Alex Unnippillil</div>
        <a class="text-secondary me-3" href="https://github.com/Alex-Unnippillil" target="_blank" rel="noreferrer">
          <i class="fa-brands fa-github fa-lg me-1" aria-hidden="true"></i>
          GitHub
        </a>
        <a class="text-secondary" href="https://www.linkedin.com/in/unnippillil" target="_blank" rel="noreferrer">
          <i class="fa-brands fa-linkedin fa-lg me-1" aria-hidden="true"></i>
          LinkedIn
        </a>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script src="/javascripts/main.js"></script>
  </body>
</html>

